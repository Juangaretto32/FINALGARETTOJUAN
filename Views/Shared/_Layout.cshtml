<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FINALGARETTOJUAN</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FINALGARETTOJUAN.styles.css" asp-append-version="true" />
    <link href="~/css/estilos.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Productos" asp-action="Index" style="font-family:Script MT; font-size:1.5rem;color:red;">La Tienda De Saul</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       
                        <li class="nav-item" style="font-family:Script MT; font-size:1.5rem;color:red;border: 2px solid red;margin-right:2px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Modelos" asp-action="Index">Modelos</a>
                        </li>
                        <li class="nav-item" style="font-family:Script MT; font-size:1.5rem;color:red;border: 2px solid red;margin-right:2px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tipos" asp-action="Index">Tipos</a>
                        </li>
                        <li class="nav-item" style="font-family:Script MT; font-size:1.5rem;color:red;border: 2px solid red;margin-right:2px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Productos" asp-action="Index">Productos</a>
                        </li>
                        <li class="nav-item" style="font-family:Script MT; font-size:1.5rem;color:red;border: 2px solid red;margin-right:2px;">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Stocks" asp-action="Index">Stock</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <p style="font-family:Arial; font-size:1.5rem;color:black;"> La Tienda De Saul - AV.Roca 2170 - San Francisco Cordoba - Tel: 3564-223264</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
