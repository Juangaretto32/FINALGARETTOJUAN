@model FINALGARETTOJUAN.Models.Producto

<head>
    <link href="~/css/estilos.css" rel="stylesheet" />
</head>

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Eliminar</h1>

<h3 style="font-size: 20px;color:black">Seguro que quieres eliminar este Producto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="font-size: 20px;color:black">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2" style="font-size: 20px;color:black">
            @Html.DisplayNameFor(model => model.Modelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Modelo.Descripcion)
        </dd>
        <dt class="col-sm-2" style="font-size: 20px;color:black">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo.Descripcion)
        </dd>


    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger btn-sm btn-custom botones" /> |
        <a asp-action="Index" class="btn btn-primary">Volver a Inicio</a>
    </form>
</div>
