@model IEnumerable<FINALGARETTOJUAN.Models.Stock>

<head>
    <link href="~/css/estilos.css" rel="stylesheet" />
</head>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Stock Disponible</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cargar Stock</a>
</p>

<table class="table custom-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.producto)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.producto.Foto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.producto.Descripcion)
                </td>
                <td class="text-center">
                    @if (!string.IsNullOrEmpty(item.producto.Foto))
                    {
                        <div class="contenedorimagen">
                            <img src="@Url.Content("~/Fotografia/" + item.producto.Foto)" class="imagen" />
                        </div>
                    }
                </td>

                <td>
                    <div class="botones">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm btn-custom">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm btn-custom">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-custom">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



